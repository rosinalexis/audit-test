{
    "themeOrder": [
        "projectInfo",
        "genericAudit",
        "agileAudit",
        "vModelAudit",
        "kanbanAudit",
        "prince2Audit"
    ],
    "themes": [
        {
            "id": "projectInfo",
            "title": "Informations sur le projet",
            "questions": [
                {
                    "id": "projectName",
                    "type": "text",
                    "label": "Nom du projet"
                },
                {
                    "id": "methodology",
                    "type": "select",
                    "label": "Méthodologie utilisée",
                    "options": [
                        "Agile",
                        "Cycle en V",
                        "Kanban",
                        "PRINCE2"
                    ]
                }
            ]
        },
        {
            "id": "genericAudit",
            "title": "Audit générique",
            "questions": [
                {
                    "id": "objectivesDefined",
                    "type": "select",
                    "points": 2,
                    "label": "Les objectifs du projet sont-ils clairement définis ?",
                    "options": [
                        "Oui",
                        "Partiellement",
                        "Non"
                    ]
                },
                {
                    "id": "stakeholdersIdentified",
                    "type": "radio",
                    "points": 2,
                    "label": "Les parties prenantes sont-elles identifiées ?",
                    "options": [
                        "Oui",
                        "Partiellement",
                        "Non"
                    ]
                },
                {
                    "id": "riskLevel",
                    "type": "radio",
                    "points": 1,
                    "label": "Quel est le niveau de risque du projet ?",
                    "options": [
                        "Faible",
                        "Modéré",
                        "Élevé"
                    ]
                }
            ]
        },
        {
            "id": "agileAudit",
            "title": "Audit spécifique à la méthodologie Agile",
            "questions": [
                {
                    "id": "scrumRoles",
                    "type": "select",
                    "points": 2,
                    "label": "Les rôles Scrum (PO, SM, équipe) sont-ils bien définis ?",
                    "options": [
                        "Oui",
                        "Partiellement",
                        "Non"
                    ]
                },
                {
                    "id": "sprintsDefined",
                    "type": "select",
                    "points": 2,
                    "label": "Les sprints sont-ils bien planifiés et suivis ?",
                    "options": [
                        "Oui",
                        "Partiellement",
                        "Non"
                    ]
                }
            ]
        },
        {
            "id": "vModelAudit",
            "title": "Audit spécifique à la méthodologie Cycle en V",
            "questions": [
                {
                    "id": "specsDetailed",
                    "type": "select",
                    "points": 2,
                    "label": "Les spécifications sont-elles détaillées et validées ?",
                    "options": [
                        "Oui",
                        "Partiellement",
                        "Non"
                    ]
                },
                {
                    "id": "testPlan",
                    "type": "select",
                    "points": 2,
                    "label": "Un plan de tests est-il défini en amont ?",
                    "options": [
                        "Oui",
                        "Partiellement",
                        "Non"
                    ]
                }
            ]
        },
        {
            "id": "kanbanAudit",
            "title": "Audit spécifique à la méthodologie Kanban",
            "questions": [
                {
                    "id": "workflowVisible",
                    "type": "select",
                    "points": 2,
                    "label": "Le flux de travail est-il visible à tous ?",
                    "options": [
                        "Oui",
                        "Partiellement",
                        "Non"
                    ]
                },
                {
                    "id": "wipLimited",
                    "type": "select",
                    "points": 2,
                    "label": "Les limites WIP sont-elles définies et respectées ?",
                    "options": [
                        "Oui",
                        "Partiellement",
                        "Non"
                    ]
                }
            ]
        },
        {
            "id": "prince2Audit",
            "title": "Audit spécifique à la méthodologie PRINCE2",
            "questions": [
                {
                    "id": "businessCaseMaintained",
                    "type": "select",
                    "points": 2,
                    "label": "Un Business Case est-il maintenu à jour ?",
                    "options": [
                        "Oui",
                        "Partiellement",
                        "Non"
                    ]
                },
                {
                    "id": "rolesAndResponsibilities",
                    "type": "radio",
                    "points": 2,
                    "label": "Les rôles et responsabilités sont-ils bien définis ?",
                    "options": [
                        "Oui",
                        "Partiellement",
                        "Non"
                    ]
                }
            ]
        }
    ]
}